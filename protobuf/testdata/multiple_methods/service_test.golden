package testpkg

import (
	"context"
	"testing"

	pbe2e_test_service "github.com/example/proto/user"
)

func TestCreateUser(t *testing.T) {
	tests := []struct {
		name     string
		input    *pbe2e_test_service.E2ECreateUserRequest
		expected *pbe2e_test_service.E2ECreateUserResponse
	}{
		{
			name: "case_0",
			input: &pbe2e_test_service.E2ECreateUserRequest{
				Email:    "alice@example.com",
				Username: "alice",
			},
			expected: &pbe2e_test_service.E2ECreateUserResponse{
				Success: true,
				UserID:  "user_alice",
			},
		},
	}

	for _, tt := range tests {
		t.Run(tt.name, func(t *testing.T) {
			ctx := context.Background()
			actual, err := e2e_test_serviceClient.CreateUser(ctx, tt.input)
			if err != nil {
				t.Fatalf("RPC call failed: %%v", err)
			}

			if !compareE2EOutput(tt.expected, actual) {
				t.Errorf("CreateUser output mismatch:\nexpected: %+v\ngot:      %+v", tt.expected, actual)
			}
		})
	}
}

